<div class="row">
      <div class="col s12">
            <blockquote><h3>Catálogo Proveedores</h3></blockquote>
      </div>
</div>
<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s6"><a class="active" href="#test1">Registrar</a></li>
      <li class="tab col s6"><a href="#test2">Registrados</a></li>
    </ul>
  </div>

  <div id="test1" class="col s12">
    <h5 style="background: #bbdefb;">Registrar nuevo proveedor</h5>
    <%= render partial: "form"%>
  </div>

  <div id="test2" class="col s12">
      <h5 style="background: #bbdefb;">Listado de proveedores</h5>
    <table>
      <thead>
        <tr>
          <th>Provedor</th>
          <th>Contacto</th>
          <th>Teléfono 1</th>
          <th>Teléfono 2 (opcional)</th>
          <th>Correo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @provedors.each do |provedor| %>
          <tr>
            <td><%= provedor.provedor %></td>
            <td><%= provedor.contacto %></td>
            <td><%= provedor.telefono1 %></td>
            <td><%= provedor.telefono2 %></td>
            <td><%= provedor.correo %></td>
            <td><%= link_to 'Ver', provedor %></td>
            <td><%= link_to 'Editar', edit_provedor_path(provedor) %></td>
            <td><%= link_to 'Eliminar', provedor, method: :delete, data: { confirm: 'Esta seguro que desea borrar proveedor?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>