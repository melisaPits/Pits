<div class="row">
		<div class="col s12" >
			<h5 style="background: #bbdefb;">Agregar mano de obra</h5>
		</div>

		<div class="col s4" class="input-field">
			<h6>Accion:</h6>
			
			<p>
	      		<label>
	            	<input type="checkbox"  id="trabExterno" type="text" class="validate">
	            	<span>T.o.T</span>
	        	</label>
			</p>
			<p>
				<label>
					<input type="radio" name="tipo" id="reparar" type="text" class="validate">
					<span>Reparar</span>
				</label>
			</p>
			<p>
				<label>
					<input type="radio" name="tipo" id="sustitucion" type="text" class="validate">
					<span>Sustitución</span>
				</label>
			</p>
		</div>
		<div class="col s4" class="input-field" style="text-align: center;">
			<p>
	      		<label>
	      			<span>Mano de obra:</span>
	            	<input id="manoObra" type="text" class="validate">   
	        	</label>
			</p>
		</div>
		<div class="col s4" class="input-field" style="text-align: center;">
			<p>
	      		<label>
	            	<span>Refacción:</span>
	            	<input id="refaccion" type="text" class="validate">
	        	</label>
			</p>
		</div>
	</div>

	<div class="row">
		<div class="col s4" style="text-align: center;">
		   	<p>
		    	<label>Hojalateria:</label>
		    	<input id="rdH" name="rdH" class="validate" type="number" step=".001" min="0">
		    </p>
		</div>
		<div class="col s4" style="text-align: center;">
			<p>
		    	<label>Pintura:</label>
		    	<input id="rdP" name="operaciones[]" class="validate" type="number" step=".001" min="0">
		    </p>
		</div>
		<div class="col s4" style="text-align: center;">
			<p>
		    	<label>Mecánica:</label>
